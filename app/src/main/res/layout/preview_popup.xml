<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".MainActivity">

    <!--PopUp Design-->
    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_margin="20dp"
        android:background="@android:color/black">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp">

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/close"
                android:layout_gravity="center_horizontal"
                android:layout_alignBottom="@+id/textView"
                android:layout_alignParentTop="true"
                android:onClick="close"
                android:background="@drawable/ic_action_cancel"
                android:layout_toRightOf="@+id/textView"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:backgroundTint="#ffadadad"
                android:layout_alignParentStart="false"
                android:clickable="true" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/Document_Preview"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/textView"
                android:layout_above="@+id/send"
                android:background="#ff9a9a9a"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Preview"
                android:id="@+id/textView"
                android:textSize="30dp"
                android:textStyle="bold"
                android:gravity="center_vertical|center_horizontal"
                android:textColor="#fff2f2f2"
                android:background="@android:color/darker_gray" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="Send"
                android:id="@+id/send"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignRight="@+id/close"
                android:layout_alignEnd="@+id/close"
                android:onClick="send"
                android:background="@android:color/darker_gray" />
        </RelativeLayout>
    </FrameLayout>
</RelativeLayout>
